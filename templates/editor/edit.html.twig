{% extends 'base.html.twig' %}
{% block title %} {{ 'title.editor' | trans }} {% endblock %}
{% form_theme form _self %}
{% block body %}
    <div class ="container">
        <div class="row section-content-2">

            <div class="form-section">
                <div class="col-sm-12">
                    <form method="post" action="">
                        <div class="kc-elm kc-title-wrap  left dark">
                            <div class="title-wrapper">
                                <h3 class="kc_title">{{ 'editor.header' | trans | raw }}</h3>
                            </div>
                        </div>

                        {% for message in app.flashes('editor-warning') %}
                            <div class="warning-message margin-bottom-10">{{ message }}</div>
                        {% endfor %}

                        <div class="row">
                            <div class="col-md-12 form-group">
                                {{ form_label(form.title, '', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'input-block'}}) }}
                                {{ form_errors(form.title)}}
                            </div>
                        </div>
                        <div class = "row">
                            <div class="row margin-top-20">
                                <div class="col-md-12 article-images">
                                    {#{% for screen in article.images %}#}
                                        {#<div class="hovereffect" id="screen-{{ screen.id }}">#}
                                            {#<img class="img-responsive img-screens-gallery" src="{{ screen.screenshot }}" alt="">#}
                                            {#<div class="overlay">#}
                                                {#<p class="icon-links text-center">#}
                                                    {#<a href="{{ screen.screenshot }}" data-lightbox="{{ article.title }}"><i class="fas fa-search-plus"></i></a>#}
                                                    {#<a href="#null" onclick="deleteScreen({{ screen.id }})"><i class="fas fa-trash-alt"></i></a>#}
                                                {#</p>#}
                                            {#</div>#}
                                        {#</div>#}
                                    {#{% endfor %}#}
                                </div>
                            </div>
                        </div>
                        <div class="row margin-top-20">
                            <div class="col-md-offset-2 col-md-8 text-center">
                                <div id="uploader"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                {{ form_label(form.text, '', {'label_attr': {'class': 'bmd-label-floating'}}) }}
                                {{ form_widget(form.text, {'attr': {'class': 'input-block', 'rows': 30, 'style': 'height:1200px; max-height: 1200px;'}}) }}
                                {{ form_errors(form.text)}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-offset-2 col-md-8 form-bottom">
                                {{ form_row(form._token) }}
                                <input type="submit" name="save" class="btn btn-primary btn-large" value="{{ 'editor.save_button'|trans }}">
                                {% if article.isDraft %}
                                    <input type="submit" name="publish" class="btn btn-primary btn-large btn-primary-green" value="{{ 'editor.publish_button'|trans }}">
                                {% endif %}
                                {% if article.isPublished %}
                                    <input type="submit" name="draft" class="btn btn-primary btn-large btn-primary-grey" value="{{ 'editor.draft_button'|trans }}">
                                {% endif %}

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="error">{{ error.message }}</div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block javascripts %}
    <script>
        $(function() {
            var uploader = new qq.FineUploader({
                element: document.getElementById("uploader"),
                debug: {{ fineUploader.debug }},
                failedUploadTextDisplay: {
                    mode: 'custom',
                    responseProperty: 'error',
                },
                request: {
                    endpoint: '{{ path('editor_edit_upload_image', {'article': article.id}) }}'
                },
                callbacks: {
                    onUpload: function () {
                        $(".qq-upload-fail").remove()
                    },
                    onComplete: function(id, name, response) {
                        if(response.hasOwnProperty('picture')) {
                            $(".article-images").append('<div class="hovereffect" id="screen-'+response['screenId']+'">\n' +
                                '                                        <img class="img-responsive img-screens-gallery" src="'+response['picture']+'" alt="">\n' +
                                '                                        <div class="overlay">\n' +
                                '                                            <p class="icon-links text-center">\n' +
                                '                                                <a href="'+response['picture']+'" data-lightbox="{{ article.title }}"><i class="fas fa-search-plus"></i></a>\n' +
                                '                                                <a href="#null" onclick="deleteScreen('+response['screenId']+')"><i class="fas fa-trash-alt"></i></a>\n' +
                                '                                            </p>\n' +
                                '                                        </div>\n' +
                                '                                    </div>');

                        }
                    }
                }
            })
        });

        function deleteScreen(screenId)
        {
            $.post( "/project/edit/delete-screen/"+screenId, function( data ) {
                $("#screen-"+screenId).remove();
            });
        }
    </script>

    <script type="text/template" id="qq-template">
        <div class="qq-uploader-selector qq-uploader-screens" qq-drop-area-text="">

            <div class="qq-upload-button-selector qq-upload-button text-center" style="width: 100%">
                <a href="#null" >{{ 'editor.add_image_button' | trans }}</a>
            </div>
            <span class="qq-drop-processing-selector qq-drop-processing">
                <span>Processing dropped files...</span>
                <span class="qq-drop-processing-spinner-selector qq-drop-processing-spinner"></span>
            </span>
            <ul class="qq-upload-list-selector qq-upload-list" aria-live="polite" aria-relevant="additions removals">
                <li>
                    <div class="qq-progress-bar-container-selector">
                        <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-progress-bar-selector qq-progress-bar"></div>
                    </div>
                    <span class="qq-upload-spinner-selector qq-upload-spinner"></span>
                    <span role="status" class="qq-upload-status-text-selector qq-upload-status-text"></span>
                </li>
            </ul>
        </div>
    </script>
{% endblock %}