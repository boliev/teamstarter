<article class="post">
    <div class="entry-content">
        <div class="entry-meta">
            <div class="row">
                <div class="col-md-1">
                    <div class="specialists-list-avatar" style="height: 70px; width: 70px; margin-top: 0px; background-image: url('{% if comment.from.profilePicture %} {{ comment.from.profilePicture }} {% else %}{{ asset(avatart_placeholder) }}{% endif %}')"></div>
                </div>
                <div class="info col-md-10">
                    <div class="meta margin-top-1">
                        <span class="date"><i class="mn-icon-1130"></i>{{ comment.createdAt|localizeddate('medium') }}</span>
                    </div>
                    <div class="row margin-top-5"><div class="col-sm-12 comment-text">
                            <b><a class="comment-user-name" href="{{ path('specialists_more', {'user': comment.from.id}) }}">{{ comment.from.fullName }}</a> </b><br/>
                            {{  comment.message  | nl2br }}
                        </div></div>
                </div>
            </div>
        </div>
    </div>
</article>