<article class="post">
    <div class="entry-content">
        <div class="entry-meta">
            <div class="info">
                <div class="meta margin-top-1">
                    <span class="date"><i class="mn-icon-1130"></i>{{ project.createdAt|localizeddate('short', 'none') }}</span>
                    <span class="author"><i class="fas fa-user-tie"></i><a href="{{ path('specialists_more', {'user': project.user.id}) }}">{{ project.user.getFullName() }}</a></span>
                    <span><i class="mn-icon-132"></i>{{ project.status.name | trans }}</span>
                    {% if project.city %}
                        <span><i class="fas fa-map-marker"></i>{{ project.city }}{% if project.country%}, {{ project.country}}{% endif %}</span>
                    {% elseif project.country%}
                        <span><i class="fas fa-map-marker"></i>{{ project.country }}</span>
                    {% endif %}
                    {% if project.commentsCount > 0 %}
                        <span><a href="{{ path('project_more', {'project': project.id}) }}#comments"><i class="far fa-comments"></i>{{ project.commentsCount }}</a></span>
                    {% endif %}
                </div>
                <div class="row"><div class="col-sm-12"><h4 class="entry-title"><a href="{{ path('project_more', {'project': project.id}) }}">{{ project.name }}</a></h4></div></div>
            </div>
        </div>
        <div class="info-bottom">
            <div class="info-description">{{ 'project.our_mission' | trans }}: {{ project.mission }}</div>
            <div class="info-description">{{ project.description | truncate(250, true) | nl2br }}</div>
            <div class="info-description">
                <ul class="projects-list-roles">
                    {% for role in project.openRoles %}
                        <li><i class="fas fa-door-open"></i>{{ role.name }}</li>
                    {% endfor %}
                </ul><div style="clear: both"></div></div>
            <div class="margin-top-10"><a href="{{ path('project_more', {'project': project.id}) }}">{{ 'more' | trans }}</a></div>
        </div>
    </div>
</article>